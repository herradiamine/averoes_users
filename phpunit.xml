<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/6.3/phpunit.xsd"
    colors="true"
    verbose="false"
>
    <testsuites>
        <testsuite name="averoes">
            <directory suffix=".php">Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">App</directory>
            <directory suffix=".php">Config</directory>
            <directory suffix=".php">Database</directory>
            <directory suffix=".php">Entities</directory>
            <directory suffix=".php">Models</directory>
            <directory suffix=".php">Public</directory>
            <directory suffix=".php">Routes</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="/var/www/html/averoes/averoes_users/Rapports/tmp/report" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="/var/www/html/averoes/averoes_users/Rapports/tmp/coverage.xml"/>
        <log type="coverage-php" target="/var/www/html/averoes/averoes_users/Rapports/tmp/coverage.serialized"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
        <log type="junit" target="/var/www/html/averoes/averoes_users/Rapports/tmp/logfile.xml"/>
        <log type="testdox-html" target="/var/www/html/averoes/averoes_users/Rapports/tmp/testdox.html"/>
        <log type="testdox-text" target="/var/www/html/averoes/averoes_users/Rapports/tmp/testdox.txt"/>
    </logging>

    <php>
        <const name="PHPUNIT_TESTSUITE" value="true"/>
    </php>
</phpunit>
